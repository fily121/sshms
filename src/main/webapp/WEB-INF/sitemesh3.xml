<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <!-- 指明满足“/*”的页面，将被“/WEB-INF/views/decorator.jsp -->
    <mapping path="/mobile/*" decorator="/WEB-INF/views/mobileDecorator.jsp" />
    <mapping path="/*" decorator="/WEB-INF/views/decorator.jsp" />

    <!-- 指明满足“/exclude.jsp*”的页面，将被排除，不被装饰 -->
    <mapping path="/user/login.do" exclue="true" />
    <mapping path="/data/**" exclue="true" />
    <mapping path="/div/**" exclue="true" />
    <mapping path="/dwr/*" exclue="true" />
    <mapping path="/dwr/*/*" exclue="true" />
</sitemesh>